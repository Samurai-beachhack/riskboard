{
  "name": "zerohour",
  "version": "1.0.0",
  "description": "Terminal-based, context-aware failure predictor for full-stack codebases",
  "main": "dist/index.js",
  "bin": {
    "zerohour": "bin/zerohour.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x zerohour 2>/dev/null || true",
    "start": "node dist/index.js",
    "analyze": "node dist/index.js analyze",
    "postinstall": "node -e \"try { require('fs').chmodSync('bin/zerohour.js', 0o755) } catch (e) {}\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["failure-prediction", "cli", "codebase-analysis"],
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "boxen": "^6.2.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@babel/parser": "^7.23.6",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  }
}
